@model BuildStudio.Data.Model.FunctionalSpecification

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Functional specification</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Creation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Creation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Version)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Version)
        </dd>
    </dl>
    <hr />
    @if (Model.Functionalities.Any())
    {
        <table class="table dataTable table-bordered">
            <thead>
                <tr>
                    <th colspan="4" class="bg-primary">
                        @Html.DisplayNameFor(model => model.Functionalities)
                    </th>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Functionalities.FirstOrDefault().ReadableId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Functionalities.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Functionalities.FirstOrDefault().ShortDescription)
                    </th>
                    <th>
                        User actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Functionalities)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.ReadableId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ShortDescription)
                    </td>
                    <td>
                        <a asp-controller="Functionalities" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Functionalities" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Functionalities" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-controller="Functionalities" asp-action="Create" asp-route-id="@Model.Id">Add functionality</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
