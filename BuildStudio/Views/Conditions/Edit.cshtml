@model BuildStudio.Data.Model.Condition

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Condition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcceptanceCriteriaId" class="control-label"></label>
                <select asp-for="AcceptanceCriteriaId" class="form-control" asp-items="ViewBag.AcceptanceCriteriaId"></select>
                <span asp-validation-for="AcceptanceCriteriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="AcceptanceCriterias" asp-action="Details" asp-route-id="@Model.AcceptanceCriteriaId">Back to the acceptance criteria</a>
</div>

