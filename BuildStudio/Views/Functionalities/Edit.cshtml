@model BuildStudio.Data.Model.Functionality

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Functionality</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FunctionalSpecificationId" class="control-label"></label>
                <select asp-for="FunctionalSpecificationId" class="form-control" asp-items="ViewBag.FunctionalSpecificationId"></select>
                <span asp-validation-for="FunctionalSpecificationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="FunctionalSpecifications" asp-action="Details"  asp-route-id="@Model.FunctionalSpecificationId" >Back to the functional specification</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
