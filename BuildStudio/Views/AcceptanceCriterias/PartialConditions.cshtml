@model BuildStudio.Data.Model.AcceptanceCriteria

<table class="table dataTable table-bordered">
    <thead>
        <tr>
            <th colspan="4" class="bg-primary">
                @Html.DisplayNameFor(model => model.Conditions)
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Conditions.FirstOrDefault().ReadableId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conditions.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conditions.FirstOrDefault().ShortDescription)
            </th>
            <th>
                User actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Conditions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.ReadableId)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ShortDescription)
                </td>
                <td>
                    <a asp-controller="Conditions" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Conditions" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Conditions" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>