@model BuildStudio.Data.Model.Result

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Result</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Expected">
                        <input asp-for="Expected" />
                        @Html.DisplayNameFor(m => m.Expected)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedResultId" class="control-label"></label>
                <select asp-for="ExpectedResultId" class="form-control" asp-items="ViewBag.ExpectedResultId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ExpectedResults" asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]">Back to the expected result</a>
</div>

